<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidApp"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.AndroidApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".navigation.navigablescreen.NavigableScreen"
            android:exported="false" />
        <activity
            android:name=".navigation.navigablescreen.AllNotes"
            android:exported="false" />
        <activity
            android:name=".navigation.navigablescreen.SettingsScreen"
            android:exported="false" />
        <activity
            android:name=".authorizationscreen.Login"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.AndroidApp">
        </activity>
        <activity
            android:name=".authorizationscreen.SignUp"
            android:exported="false"/>
        <activity
            android:name=".authorizationscreen.RestorePassword"
            android:exported="false" />
        <activity
            android:name=".navigation.navigablescreen.CreateNote"
            android:exported="false" />
        <activity
            android:name=".navigation.navigablescreen.DaysScreen"
            android:exported="false" />
        <activity
            android:name=".navigation.navigablescreen.CalendarScreen"
            android:exported="false" />

        <receiver
            android:name=".receivers.LanguageChangeReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.androidapp.LANGUAGE_CHANGED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>